<UserControl x:Class="BetterEditor.Views.SearchView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BetterEditor.Views"
      mc:Ignorable="d" 
      Height="450" Width="800">

    <Grid Height="20" Margin="10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"/>
        <TextBox Grid.Column="2"/>
        <TextBlock Grid.Column="3" HorizontalAlignment="Right" Text="Search all tabs"/>
        <CheckBox Grid.Column="4"/>
        <Button Grid.Column="6"/>
        <Button Grid.Column="8"/>
        <Button Grid.Column="10"/>
        <Button Grid.Column="12"/>
    </Grid>
</UserControl>
